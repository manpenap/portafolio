---
import Header from '../components/Header.astro';
import DarkModeToggle from '../components/DarkModeToggle.astro';
import Footer from '../components/Footer.astro';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Portafolio - Desarrollador Web</title>
    <meta name="description" content="Portafolio de Manuel, desarrollador web especializado en tecnologías modernas como React, Node.js y Astro." />

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="Portafolio de Manuel - Desarrollador Web" />
    <meta property="og:description" content="Descubre proyectos de desarrollo web con React, Node.js y más." />
    <meta property="og:image" content="/assets/about.jpg" />
    <meta property="og:type" content="website" />

    <!-- Twitter Card Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />

    <!-- Optimización de carga de CSS -->
    <link rel="preload" href="/styles/global.css" as="style" onload="this.onload=null;this.rel='stylesheet'" />
    <noscript><link rel="stylesheet" href="/styles/global.css" /></noscript>

  </head>

  <body class="bg-background-light text-text-light dark:bg-background-dark dark:text-text-dark transition-colors duration-300">
    <Header />
    <!-- Contenedor para el contenido del post -->
    <main class="prose prose-lg mx-auto pt-24 py-8 px-4 dark:prose-invert">
        <slot />
        <div class="text-center mt-8">
          <button onclick="window.history.back()" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors">
            Volver atrás
          </button>
        </div>
    </main>
    <Footer />
  </body>
  
  <script client:load>
    document.addEventListener("DOMContentLoaded", () => {
      if (localStorage.getItem("theme") === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    });
  </script>
  
</html>



