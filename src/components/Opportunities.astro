  <!-- Script para animaci√≥n al hacer scroll -->
  <script>
    if (!window.hasRunOpportunitiesObserver) {
      window.hasRunOpportunitiesObserver = true;

      document.addEventListener("DOMContentLoaded", () => {
        const observer = new IntersectionObserver(
          (entries) => {
            entries.forEach((entry, index) => {
              if (entry.isIntersecting) {
                setTimeout(() => {
                  entry.target.classList.add("animate-fade-in-up");
                }, index * 200);
              }
            });
          },
          { threshold: 0.1 }
        );

        const elements = document.querySelectorAll('#opportunities [data-animate="fade-up"]');
        elements.forEach((el) => observer.observe(el));
      });
    }
  </script>

  <style>
    @keyframes fade-in-up {
      from {
        opacity: 0;
